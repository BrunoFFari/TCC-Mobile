<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="14dp"
    android:paddingBottom="12dp"
    android:paddingRight="15dp">

    <ImageView
        android:id="@+id/img_voltar"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:src="@drawable/ic_arrow_back_white_24dp"
        android:onClick="voltarNavegacao"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_weight="0.7"
        android:background="@drawable/esit_pesquisa"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_search_black_24dp"
            android:layout_marginLeft="5dp"
            android:onClick="abrirPesquisa"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pesquise Pratos e categorias"
            android:layout_marginTop="6dp"
            android:textColor="@color/colorAccent"
            android:onClick="abrirPesquisa"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/img_filtro"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_weight="0.3"
        android:src="@drawable/ic_tune_white_24dp"
        android:onClick="abrirFiltroDialog"/>
</LinearLayout>