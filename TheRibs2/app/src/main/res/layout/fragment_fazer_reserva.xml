<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:id="@+id/layout"
        tools:context="com.example.a16165872.theribs.FazerReservaFragment">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Primeiro, Escolha o restaurante:"
                android:textColor="@color/colorPrimary"
                android:textAlignment="center"
                android:textStyle="bold"
                android:id="@+id/txt_titulo_restaurante"
                android:textSize="15dp"/>

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:id="@+id/spn_filial">

            </Spinner>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Agora, selecione a data desejada:"
                android:textColor="@color/colorPrimary"
                android:textAlignment="center"
                android:textStyle="bold"
                android:id="@+id/txt_titulo_data"
                android:textSize="15dp"/>

        <LinearLayout
            android:id="@+id/layout_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_titulo_data2"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="Data:"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                />

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingTop="10dp"
                android:text="Escolha uma data"
                android:id="@+id/txt_data"/>

            <Button
                android:id="@+id/btn_abrir_calendario"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="-10dp"
                android:background="@color/colorPrimary"
                android:drawableBottom="@drawable/ic_event_white_24dp"
                android:paddingBottom="3dp" />

        </LinearLayout>


        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Estamos quase terminando, escolha o periodo desejado..."
                android:textColor="@color/colorPrimary"
                android:textAlignment="center"
                android:textStyle="bold"
                android:id="@+id/txt_titulo_periodo"
                android:textSize="15dp"/>


            <Spinner
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:id="@+id/spn_periodo">

            </Spinner>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Ótimo, agora só precisamos saber a mesa que você deseja"
                android:textColor="@color/colorPrimary"
                android:textAlignment="center"
                android:textStyle="bold"
                android:id="@+id/txt_titulo_mesa"
                android:textSize="15dp"/>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <GridView
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:id="@+id/grid_items"
                android:numColumns="auto_fit"
                android:horizontalSpacing="10dp"
                android:verticalSpacing="10dp">

            </GridView>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:src="@drawable/garcom"
                android:id="@+id/img_sem_mesas" />


        </FrameLayout>




    </LinearLayout>




</ScrollView>
